html
    head
        include head.jade
        link(rel="stylesheet", href="/css/style.css")
        title dtour
    body
        div(id="loading-container", style="display:none; padding: 300px; height: 100%; background-color: #0dc5c1")
            center
                h2 Watching Paint Dry
            div(class="loader")
        div(id="map-displays", style="display: none;")
            div(id="location-container", style="width: 25%; height: 100%")
                button(id="search-controller", class="btn btn-default btn-lg btn-block", onclick="search_side()")
                    center update search
                button(id="stop-controller", class="btn btn-default btn-lg btn-block", disabled, onclick="stops_side()")
                    center dtours
                div(id="search-side-container", style="display: none")
                    input(type="text", id="start_location2", class="form-control inputs2",
                          placeholder="starting location", value="New York")
                    input(type="text", id="start_time2" class="form-control inputs2",
                          placeholder="starting time", value="0800")
                    input(type="text", id="end_location2" class="form-control inputs2",
                          placeholder="ending location", value="San Francisco")
                    button(id="submit-query2", class="btn btn-default btn-lg btn-block").
                        submit
                div(id="pit-stop-container")
                    ul(id="location-queue", class="list-group")
                        li(class="list-group-item")
                    button(class="btn btn-default btn-lg btn-block disabled")
                        center get custom url (coming soon)
                    button(class="btn btn-danger btn-lg btn-block" onclick="$('#location-queue').empty();")
                        center clear
            div(id="map", style="width: 75%; height: 100%; float: left;")
        div(id="inputs", class="jumbotron", style="height: 100%")
            center
                    h1(style="color: #0dc5c1") dtour
                    input(type="text", id="start_location",class="form-control inputs",
                          placeholder="starting location", value="Los Angeles")
                    br
                    input(type="text", id="start_time" class="form-control inputs",
                          placeholder="starting time", value="0800")
                    br
                    input(type="text", id="end_location" class="form-control inputs",
                          placeholder="ending location", value="San Francisco")
                    br
                    button(id="submit-query", class="btn btn-default inputs").
                        submit
        script(src="/js/scripts.js")
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAl1AUh9oQiTgNrNfeLW1RIOLZyzbKXSjA&callback=initMap", async, defer)
        include footer.jade

