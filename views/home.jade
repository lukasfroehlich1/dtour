    head
        include head.jade
        link(rel="stylesheet", href="/css/style.css")
    body
        div(id="map-displays", style="display: none;")
            div(id="location-container")
                ul(id="location-queue", class="list-group")
                    li(class="list-group-item")
                        center
                            b pit stops
            div(id="map", style="height: 100%")
        div(id="inputs", class="jumbotron")
            center
                    h1 dtour
                    input(type="text", id="start_location",class="form-control inputs",
                          placeholder="Starting location")
                    br
                    input(type="text", id="start_time" class="form-control inputs",
                          placeholder="Starting time")
                    br
                    input(type="text", id="end_location" class="form-control inputs",
                          placeholder="Ending location")
                    a(href="") advanced search 
                    br
                    button(id="submit-query", class="btn btn-primary inputs").
                        submit
